{
    "exclude": ["node_modules"],
    "include": ["**/*.ts"],
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "Bundler",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "declaration": false,
        "typeRoots": ["./src/@types", "./node_modules/@types"],
        "newLine": "lf",
        "types": ["node"],
        "noEmit": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ES2022", "ES2023", "ESNext"]
    }
}
